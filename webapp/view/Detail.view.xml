<mvc:View controllerName="client.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">

    <Page id="detail" title="{detail>/Nomecliente}" showNavButton="true" navButtonPress="goBack">

		<content>
			<Text text="{detail>/Nomecliente}" />
		</content>

        <footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button 
					type="Reject"
					text="Delete"
					press="deleteHandler()"
					ariaDescribedBy="rejectButtonDescription genericButtonDescription"
				></Button>
			</OverflowToolbar>
		</footer>   
    </Page>
</mvc:View>
