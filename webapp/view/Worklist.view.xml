<mvc:View controllerName="client.controller.Worklist"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">

    <Page id="worklist" title="Clients">
		<Button text="Novo Cliente" press="onPressNovoCliente"></Button>

		<content>
	  	    <Button 
				id="btn" 
				icon="sap-icon://edit" 
				type="Transparent" 
				press="generalMessages('My message goes here')" 
				ariaLabelledBy="editButtonLabel"
			/>
			
			<List
				headerText="Products"
				items="{path: 'ModelClients>/results'}"
			>

			<StandardListItem
				title="{ModelClients>Nomecliente}"
				iconDensityAware="false"
				iconInset="false"
				type="Navigation"
				press="itemNavigationHandler"
			/>
			</List>

			<Text text="{ModelClients>/Idcliente}"></Text>

		</content>

        <footer>
			<OverflowToolbar>
	<!-- 			<Button text="Accept" type="Accept" />
				<Button text="Reject" type="Reject" />
				<Button text="Edit" />
				<Button text="Delete" /> -->
			</OverflowToolbar>
		</footer>   
    </Page>
</mvc:View>
