<mvc:View controllerName="client.controller.Worklist"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">

    <Page id="worklist">
		<headerContent>
			<Button text="Novo Cliente" press="onPressNovoCliente"></Button>
			<Button 
				id="btn" 
				text="Test Button"
				type="Transparent" 
				press="generalMessages('My message goes here')" 
			/>
		</headerContent>
		
		<content>
			<List
				headerText="Clients"
				items="{path: 'ModelClients>/results'}"
			>

			<StandardListItem
				title="{ModelClients>Nomecliente}"
				iconDensityAware="false"
				iconInset="false"
				type="Navigation"
				press="onItemPress"
			/>
			</List>

			<Text text="{ModelClients>/Idcliente}"></Text>

		</content>

        <footer>
			<OverflowToolbar>
	<!-- 			<Button text="Accept" type="Accept" />
				<Button text="Reject" type="Reject" />
				<Button text="Edit" />
				<Button text="Delete" /> -->
			</OverflowToolbar>
		</footer>   
    </Page>
</mvc:View>
