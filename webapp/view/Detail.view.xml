<mvc:View controllerName="client.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">

    <Page id="detail" title="Detail Page" showNavButton="true" navButtonPress="goBack">
		<ObjectHeader
			binding="{/ProductCollection/0}"
			title="Client Name"
			condensed="true"
			number="{
				parts:[{path:'Price'},{path:'CurrencyCode'}],
				type: 'sap.ui.model.type.Currency',
				formatOptions: {showMeasure: false}
			}"
			numberUnit="{CurrencyCode}"
			class="sapUiResponsivePadding--header" >
			<ObjectAttribute text="{WeightMeasure} {WeightUnit} {Width} x {Depth} x {Height} {DimUnit}" />
		</ObjectHeader>

		<content>
			<Button text="Estamos dentro"></Button>
		</content>

        <footer>
			<OverflowToolbar>
	<!-- 			<Button text="Accept" type="Accept" />
				<Button text="Reject" type="Reject" />
				<Button text="Edit" />
				<Button text="Delete" /> -->
			</OverflowToolbar>
		</footer>   
    </Page>
</mvc:View>
