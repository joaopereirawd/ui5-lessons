<mvc:View 
 	displayBlock="true"
	controllerName="client.controller.Main"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:main="sap.ui.webc.main"
	xmlns="sap.ui.webc.fiori"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	height="100%"
>
	<f:FlexibleColumnLayout id="fcl" stateChange="onStateChanged" backgroundDesign="Solid">
		<f:beginColumnPages>
			<core:Fragment
				fragmentName="client.view.fragments.List"
				type="XML"
			/>
		</f:beginColumnPages>

		<f:midColumnPages>
			<mvc:XMLView viewName="client.view.Detail" />
		</f:midColumnPages>
	</f:FlexibleColumnLayout>
</mvc:View>

