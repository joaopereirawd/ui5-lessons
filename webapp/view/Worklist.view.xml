<mvc:View 
 	displayBlock="true"
	controllerName="client.controller.AsideDetail"
	xmlns:m="sap.m"
	xmlns:main="sap.ui.webc.main"
	xmlns="sap.ui.webc.fiori"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	height="100%"
>

	<FlexibleColumnLayout id="fcl" layout="OneColumn">

		<startColumn>
				<core:Fragment
					fragmentName="client.view.fragments.AsideStartColumn"
					type="XML"
				/>
		</startColumn>

		<midColumn>
			<core:Fragment
				fragmentName="client.view.fragments.AsideMidColumn"
				type="XML"
			/>
		</midColumn>

	</FlexibleColumnLayout>

</mvc:View>

